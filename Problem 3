#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    char arr[100];
    int a;
    
	cout << "Enter number of elements: "; cin >> a;

	cout << "Enter string: ";

    for (int i = 0; i < a; i++)
    {
        cin >> arr[i];
    }

	cout << "Reverse version of string:";

    for (int i = a; i>=0; i--)
    {
        cout << arr[i];
    }

	_getch();
    return 0;
}
